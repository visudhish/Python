        "number = input(\"Enter a number : \")\n",
        "numberint = int(number)\n",
        "#endinitilisation\n",
        "#logic of multiplication\n",
        "for num in range(1,11):\n",
        "    multiplication = num*numberint\n",
        "#end logic of multiplication\n",
        "    print(numberint,\"x\",num,\"=\",multiplication)\n",
